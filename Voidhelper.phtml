<script type="text/javascript">
$(document).ready(function() {
    var createUrl  = urlBase + 'void/create';
    var suggestUrl = urlBase + 'void/suggest';

    function renderSuggestions(jsonData) {
        $('#results').empty();
        jQuery.each(jsonData, function() {
            var content = '';
            jQuery.each(this.properties, function() {
                content += '&rarr;&nbsp;<a title="'+ this.uri +'" href="'+ this.url +'">' + this.label + '</a> ';
            } );
            content = '<p class="'+ this.class +'">' + this.label + ':<br/> '+ content +'<p>';
            $('#results').append(content);

            //$("#" + this).text("My id is " + this + ".");
            //return (this != "four"); // will stop running to skip "five"
        });
    }

    $('#void-suggest').click(function () {
        //$(this).addClass('is-processing');
        $.getJSON(suggestUrl, function(jsonData) {renderSuggestions(jsonData); });
    });
});
</script>
